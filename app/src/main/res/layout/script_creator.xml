<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:text="Triggers:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>




    </LinearLayout>


    <RadioGroup
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/onClickCheckBox"
            android:onClick="onClickType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="on click" />

        <RadioButton
            android:id="@+id/onEnterCheckBox"
            android:onClick="onEnterType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="on enter" />

        <RadioButton
            android:id="@+id/onDropCheckBox"
            android:onClick="onDropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="on drop" />

    </RadioGroup>

    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView

            android:visibility="gone"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InstructionsforOnDropShape"
            android:text="Choose name of shape to be dropped for action" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </LinearLayout>


    <Spinner
        android:visibility="gone"
        android:paddingTop="8dp"
        android:id="@+id/onDropShapeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/actionListSpinnerInstructions"
            android:text="choose action for trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </LinearLayout>



    <Spinner
        android:visibility="gone"
        android:paddingTop="8dp"
        android:id="@+id/actionListSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <TextView

            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/ListofItemsToPerformActionOnInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="choose direct object of action" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>



    </LinearLayout>


    <Spinner

        android:visibility="gone"
        android:paddingTop="8dp"
        android:id="@+id/ListofItemsToPerformActionOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <Button

            android:visibility="gone"
            android:id="@+id/AddActionsButton"
            android:onClick="AddCommands"
            android:text="Add Actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>



    </LinearLayout>


</LinearLayout>















